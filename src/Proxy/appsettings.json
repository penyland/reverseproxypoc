{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "Proxy"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "ServiceRoute",
        "ClusterId": "Service",
        "Order": 10000,
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    ],
    "Clusters": {
      "Service": {
        "Destinations": {
          "Service1": {
            "Address": "https://localhost:44377"
          }
        }
      }
    }
  }
}