{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "none",
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "Proxy"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "ProxyRoute",
        "ClusterId": "Proxy",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      {
        "RouteId": "ServiceRoute",
        "ClusterId": "Service",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    ],
    "Clusters": {
      "Proxy": {
        "Destinations": {
          "Proxy": {
            "Address": "https://localhost:44368"
          }
        }
      },
      "Service": {
        "Destinations": {
          "Service/destinations": {
            "Address": "https://localhost:44377"
          }
        }
      }
    }
  }
}
